{
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "CommonJS",
    "lib": ["ES2022", "es6", "DOM"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "rootDir": "src",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowJs": true,
    "noImplicitAny": true,
    "resolveJsonModule": true
  },
  "include": ["src", "tests"]
}
